<h1>Edit <%= @chore.title %></h1>

<%= form_for @chore do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <br>
    <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>
    <br>

    <%= f.submit "Edit Chore" %>
<% end %>